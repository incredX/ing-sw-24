<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane
        fx:id="scenePane"
        prefHeight="720.0"
        prefWidth="1280.0"
        xmlns="http://javafx.com/javafx/21"
        xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fitHeight="720.0"
                 fitWidth="1286.0"
                 opacity="0.89"
                 pickOnBounds="true"
                 preserveRatio="true">
         <image>
            <Image
                    url="@graphicResources/CodexBackground.jpg" />
         </image>
      </ImageView>
      <Pane
              prefHeight="720.0"
              prefWidth="1285.0"
              AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
         <children>
            <ImageView
                    fx:id="goalCard1"
                    fitHeight="250.0"
                    fitWidth="400.0"
                    layoutY="8.0"
                    pickOnBounds="true"
                    preserveRatio="true"
                    x="50.0"
                    y="100.0">
               <image>
                  <Image
                          url="@graphicResources/codexCards/croppedCards/croppedFront/goalFront/O2AAAD1.jpg" />
               </image>
               <effect>
                  <DropShadow
                          height="50.0"
                          radius="24.5"
                          spread="0.2"
                          width="50.0" />
               </effect>
            </ImageView>
            <ImageView
                    fx:id="goalCard2"
                    fitHeight="250.0"
                    fitWidth="400.0"
                    layoutX="53.0"
                    layoutY="8.0"
                    pickOnBounds="true"
                    preserveRatio="true"
                    x="450.0"
                    y="100.0">
               <image>
                  <Image
                          url="@graphicResources/codexCards/croppedCards/croppedFront/goalFront/O2AAA.jpg" />
               </image>
               <effect>
                  <DropShadow
                          height="50.0"
                          radius="24.5"
                          spread="0.1"
                          width="50.0" />
               </effect>
            </ImageView>
            <ImageView
                    fx:id="starterCard"
                    fitHeight="250.0"
                    fitWidth="400.0"
                    layoutX="-89.0"
                    layoutY="-1.0"
                    pickOnBounds="true"
                    preserveRatio="true"
                    x="210.0"
                    y="415.0">
               <image>
                  <Image
                          url="@graphicResources/codexCards/croppedCards/croppedFront/goalFront/AEEF_F0F__PAFI.jpg" />
               </image>
               <effect>
                  <DropShadow
                          height="50.0"
                          radius="24.5"
                          spread="0.2"
                          width="50.0" />
               </effect>
            </ImageView>
            <Label
                    layoutX="505.0"
                    layoutY="395.0"
                    prefHeight="146.0"
                    prefWidth="372.0"
                    text="Press this button to flip the starter card."
                    textFill="WHITE"
                    wrapText="true">
               <font>
                  <Font
                          size="35.0" />
               </font>
            </Label>
            <Button
                    fx:id="flipButton"
                    layoutX="659.0"
                    layoutY="518.0"
                    mnemonicParsing="false"
                    prefHeight="39.0"
                    prefWidth="81.0"
                    text="Flip"
                    textAlignment="CENTER">
               <font>
                  <Font
                          size="20.0" />
               </font>
            </Button>
            <Label
                    layoutX="277.0"
                    layoutY="46.0"
                    prefHeight="43.0"
                    prefWidth="564.0"
                    text="Choose your goal card:"
                    textFill="WHITE">
               <font>
                  <Font
                          size="35.0" />
               </font>
            </Label>
            <Button
                    fx:id="readyButton"
                    layoutX="1050.0"
                    layoutY="611.0"
                    mnemonicParsing="false"
                    prefHeight="49.0"
                    prefWidth="211.0"
                    text="READY!">
               <font>
                  <Font
                          size="20.0" />
               </font>
            </Button>
         </children>
      </Pane>
   </children>
</AnchorPane>
